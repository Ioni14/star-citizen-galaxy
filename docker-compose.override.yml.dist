version: '3.5'
volumes:
    #    db: ~
    redis_db: ~
services:
    php:
        build:
            context: .
            dockerfile: ./docker/Dockerfile
            target: build_php_dev
            args:
                ENV: 'dev'
                DUMP_ENV: 1
        volumes:
            - .:/app
        environment:
            # Docker for mac : try remote_host=host.docker.internal instead of remote_connect_back
#            XDEBUG_CONFIG: >-
#                remote_enable=1
#                remote_connect_back=1
#                remote_port=9001
#                idekey=PHPSTORM
    apache:
        build:
            context: .
            target: build_apache
            dockerfile: ./docker/Dockerfile
        volumes:
            - .:/app
        ports:
            - 127.0.0.1:8000:80
    apache-test:
        build:
            context: .
            target: build_apache_test
            dockerfile: ./docker/Dockerfile
        hostname: apache_test
        volumes:
            - .:/app
        environment:
            PHP_HANDLER_HOST: php:9000
    mysql:
        image: mysql:5.7
        hostname: mysql
        environment:
            MYSQL_ROOT_PASSWORD: ${DB_ROOT_PASSWORD}
            MYSQL_DATABASE: ${DB_NAME}
        tmpfs: /var/lib/mysql
#        volumes:
#            - db:/var/lib/mysql
#            - ./docker/mysql/config-file.cnf:/etc/mysql/conf.d/config-file.cnf
        ports:
            - 127.0.0.1:3306:3306
    redis:
        environment:
            REDIS_PASSWORD: root
    smtp:
        image: schickling/mailcatcher
        ports:
            - 127.0.0.1:1080:1080 # web-ui
    selenium-hub:
        image: selenium/hub
        ports:
            - 127.0.0.1:4444:4444
    selenium-chrome:
        image: selenium/node-chrome-debug
        environment:
            HUB_HOST: selenium-hub
        volumes:
            - /dev/shm:/dev/shm
        ports:
            - 127.0.0.1:5900:5900 #Â VNC
