root = true

[*]
end_of_line = LF
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 8

[{*.php, *.yml, *.yaml, *.feature, *.yml.dist, *.yaml.dist}]
indent_size = 4

[{k8s/**/*.yaml, k8s/*.yaml.dist}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
