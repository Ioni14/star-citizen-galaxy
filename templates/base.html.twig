<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <title>{% block title 'Star Citizen Galaxy' %}</title>
        {% block seo_metatags %}
            <meta name="description" content="An unofficial open API for Star Citizen in-game concepts. By the creators of Fleet Manager."/>
            <meta property="og:type" content="website" />
            <meta property="og:description" content="An unofficial open API for Star Citizen in-game concepts. By the creators of Fleet Manager."/>
            <meta property="og:image" content="{{ asset('icons/favicon-64x64.png') }}" />
        {% endblock %}

        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('icons/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="64x64" href="{{ asset('icons/favicon-64x64.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('icons/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('icons/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('icons/site.webmanifest') }}">
        <link rel="mask-icon" href="{{ asset('icons/safari-pinned-tab.svg') }}" color="#082a3a">
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
        <meta name="apple-mobile-web-app-title" content="SC Galaxy">
        <meta name="application-name" content="SC Galaxy">
        <meta name="msapplication-TileColor" content="#3d8dcb">
        <meta name="msapplication-config" content="{{ asset('icons/browserconfig.xml') }}">
        <meta name="theme-color" content="#ffffff">

        {% block metas %}{% endblock %}

        {% block stylesheets %}
            {{ encore_entry_link_tags('main') }}
        {% endblock %}
    </head>

    <body {% block body_attr '' %}>
        {% block body %}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('main') }}
        {% endblock %}
        {% if app.environment == 'prod' %}
            {% block gtag %}
                <script async src="{{ asset('build/vendors/gtag.js') }}"></script>
                <script>
                    window.dataLayer = window.dataLayer || [];
                    function gtag(){dataLayer.push(arguments);}
                    gtag('js', new Date());
                    gtag('config', 'UA-38751935-9', { 'anonymize_ip': true });
                </script>
            {% endblock %}
        {% endif %}
    </body>
</html>
