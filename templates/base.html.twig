<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <title>{% block title 'Star Citizen Galaxy' %}</title>
        {% block seo_metatags %}
            <meta name="description" content="An unofficial open API for Star Citizen in-game concepts. By the creators of Fleet Manager."/>
            <meta property="og:type" content="website" />
            <meta property="og:description" content="An unofficial open API for Star Citizen in-game concepts. By the creators of Fleet Manager."/>
{#            <meta property="og:image" content="{{ asset('icons/favicon-96x96.png') }}" />#}
        {% endblock %}

        {% block metas %}{% endblock %}

        {% block stylesheets %}
            {{ encore_entry_link_tags('main') }}
        {% endblock %}
    </head>

    <body {% block body_attr '' %}>
        {% block body %}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('main') }}
        {% endblock %}
    </body>
</html>
